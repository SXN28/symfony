{% extends 'base.html.twig' %}

{% block title %}Mes Favoris{% endblock %}

{% block body %}

<style>
    h1 {
        text-align: center;
        margin-bottom: 40px;
    }

    .favorites-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .card {
        background-color: #333;
        color: white;
        width: 250px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card img {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    .card-body {
        padding: 15px;
        text-align: center;
    }

    .card h2 {
        font-size: 1.2em;
        margin: 10px 0;
    }

    .card h2 a {
        color: white;
    }

    .btn {
        background-color: #cc0000;
        color: white;
        padding: 10px 20px;
        border: none;
        font-size: 14px;
        border-radius: 25px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    
    .btn:hover {
        background-color: #ff1a1a;
    }

    p {
        margin-top: 20px;
        text-align: center;
        font-size: 1.1em;
    }
</style>

<h1>Mes Favoris</h1>

<div class="favorites-container">
    {% for track in favoriteTracks %}
        <div class="card">
            {% if track.pictureLink %}
                <img src="{{ track.pictureLink }}" alt="Image de la musique">
            {% else %}
                <img src="/path/to/default-image.jpg" alt="Image par dÃ©faut">
            {% endif %}

            <div class="card-body">
                <h2>
                    <a href="{{ path('track_details', {'id': track.id}) }}">{{ track.name }}</a>
                </h2>
                <form action="{{ path('app_remove_favorites', {'trackId': track.id}) }}" method="post">
                    <button type="submit" class="btn">Supprimer des favoris</button>
                </form>
            </div>
        </div>
    {% else %}
        <p>Aucun morceau dans vos favoris.</p>
    {% endfor %}
</div>

{% endblock %}
